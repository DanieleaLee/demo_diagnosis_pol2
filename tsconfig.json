{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "jsxImportSource": "@emotion/react",

    "paths": {
      "src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@tempComponents/*": ["src/components/_temp/*"],
      "@tempComponents*": ["src/components/_temp/*"],
      "@alvinComponents/*": ["src/components/_temp/alvin/*"],
      "@alvinComponents": ["src/components/_temp/alvin"],
      "@lucianComponents/*": ["src/components/_temp/lucian/*"],
      "@lucianComponents": ["src/components/_temp/lucian"],
      "@lucian2Components/*": ["src/components/_temp/v2/lucian/*"],
      "@lucian2Components": ["src/components/_temp/v2/lucian"],
      "@taehyunComponents/*": ["src/components/_temp/taehyun/*"],
      "@taehyunComponents": ["src/components/_temp/taehyun"],
      "@interfaces/*": ["src/interfaces/*"],
      "@interfaces": ["src/interfaces"],
      "@modules/*": ["modules/*"],
      "@modules": ["modules"],
      "@pages/*": ["pages/*"],
      "@pages": ["pages"],
      "@recoil/*": ["src/recoil/*"],
      "@recoil": ["src/recoil"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@test/*": ["test/*"],
      "@test": ["test"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "test/*", "cypress/*"]
}
